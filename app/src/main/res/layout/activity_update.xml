<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <EditText
        android:id="@+id/edtUpdate"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:hint="Enter Student ID"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_centerHorizontal="true"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_toEndOf="@+id/edtUpdate"/>

    <EditText
        android:id="@+id/edtUpdateID"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="New ID"
        android:inputType="text"
        android:textStyle="bold"
        android:layout_below="@+id/edtUpdate"/>

    <EditText
        android:id="@+id/edtUpdateFullName"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:hint="New Full Name"
        android:inputType="text"
        android:textStyle="bold"
        android:layout_below="@+id/edtUpdateID"/>


    <TextView
        android:id="@+id/textSearch"
        android:textSize="20dp"
        android:layout_below="@id/edtUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:hint="Search Result"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"/>


</RelativeLayout>