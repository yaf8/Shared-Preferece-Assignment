<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/idBtnSave"
        android:layout_toLeftOf="@id/idBtnSave"
        android:hint="Enter Your ID" />

    <EditText
        android:id="@+id/edtFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtID"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_toStartOf="@id/idBtnAdd"
        android:hint="Enter Your Full Name" />

    <!--button for adding data to recycler view-->
    <Button
        android:id="@+id/idBtnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtID"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="Add" />

    <Button
        android:id="@+id/idBtnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="Save " />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVStudent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edtFullName" />

</RelativeLayout>
